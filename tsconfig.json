{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"lib": ["ES2020", "DOM"],
		"allowJs": false,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"sourceMap": false,
		"outDir": "./dist",
		"rootDir": "./src",
		"moduleResolution": "Node",
		"resolveJsonModule": true
	},
	"include": ["**/*.ts"]
}
